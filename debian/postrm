#! /bin/sh
# postrm script for sp-rich-core
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	
	# Avoid attempting to stop rich-core if the initscript has already
	# been cleaned away.
	if test -x /etc/init.d/rich-core-dumps ; then
	    if which invoke-rc.d >/dev/null 2>&1; then
		invoke-rc.d rich-core-dumps stop
	    else
		/etc/init.d/rich-core-dumps stop
	    fi
	fi
	
         if test -x /etc/init.d/rich-core-pattern ; then
            if which invoke-rc.d >/dev/null 2>&1; then
                invoke-rc.d rich-core-pattern stop
            else
                /etc/init.d/rich-core-pattern stop
            fi
        fi

        if [ "$1" = purge ]; then
            update-rc.d -f rich-core-dumps remove
            update-rc.d -f rich-core-pattern remove
        fi

        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
